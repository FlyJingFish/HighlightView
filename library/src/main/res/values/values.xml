<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HighlightAnimView"  >
        <attr name="highlight_view_highlightColor" format="reference|color" />
        <attr name="highlight_view_duration" format="integer" />
        <attr name="highlight_view_repeatCount" format="integer" />
        <attr name="highlight_view_highlightWidth" format="dimension" />
        <attr name="highlight_view_highlightRotateDegrees" format="float" />
        <attr name="highlight_view_repeatMode" format="enum" >
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="highlight_view_startDirection" format="enum" >
            <enum name="from_left" value="1" />
            <enum name="from_right" value="2" />
            <enum name="from_top" value="3" />
            <enum name="from_bottom" value="4" />
        </attr>
        <attr name="highlight_view_autoStart" format="boolean" />
    </declare-styleable>
</resources>